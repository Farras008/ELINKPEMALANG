<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tk.cagarbudayapml.e_linkpemalang">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logofix"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logofix"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.splash.SplashActivity"
            android:theme="@style/AppTheme.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.detailcagar.DetailCagarActivity"
            android:label="@string/title_activity_detail_cagar"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.main.MainActivity" />
        </activity>
        <activity android:name=".activity.kuis.KuisPilganActivity" />
        <activity android:name=".activity.kuis.HasilScoringActivity"></activity>
    </application>

</manifest>